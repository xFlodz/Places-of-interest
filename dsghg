        if main_image:
            check, main_image = save_main(main_image, address)
            if check == 1:
                for_next = True
            else:
                flash('Недопустимый тип файла', 'danger')
        if images and for_next:
            check, all_images = allowed_file(images, address)
            if check == False:
                flash('Недопустимый тип файла', 'danger')
            else:
                post = Posts(header=header, text=text, address=address, main_image=main_image, post_images=all_images)
                db.session.add(post)
                db.session.commit()
                flash('Пост создан', 'success')
        if images:
            pass
        else:
            post = Posts(header=header, text=text, address=address)
            db.session.add(post)
            db.session.commit()
            flash('Пост создан', 'success')